<h2>Forecast Data</h2>
  <% @forecasts[:cities].each do |forecast| %>
    <h3><%= forecast[:city] %></h3>
    <table>
      <tr>
        <th>Date and Time</th>
        <th>Minimum Temperature</th>
        <th>Maximum temperature</th>
      </tr>
      <% forecast[:forecast_list].each do |data| %>
        <tr>
          <td><%= data[:date_time] %></td>
          <td><%= data[:temp_min] %></td>
          <td><%= data[:temp_max] %></td>
        </tr>
      <% end %>
    </table>
  <% end %>